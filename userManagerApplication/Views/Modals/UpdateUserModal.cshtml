@model userManagerApplication.Models.UserModel;

<link rel="stylesheet" href="~/css/adminPanel.css" asp-append-version="true" />

<div class="modalCustomWidth" tabindex="-1">
    <div class="modal-header">
        <h4 class="modal-title">Edit user</h4>
        <button type="button" class="close" data-bs-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">

        <form id="editUserForm" asp-action="UpdateUser" asp-controller="Admin" method="post">

            <div class="col-12">
                <label id="titleUserForm">User information</label>
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input id="nameCreateUser" name="Name" class="form-control requiredCreateUser">
                    @Html.LabelFor(model => model.Name)
                </div>
                <div class="form-group">
                    <label for="LastName">LastName</label>
                    <input id="lastNameCreateUser" name="LastName" class="form-control requiredCreateUser">
                    @Html.LabelFor(model => model.LastName)
                </div>
                <hr />
            </div>

            <div class="col-12">
                <label id="titleUserForm">Contact</label>
                <div class="form-group">
                    <label for="Phone">Phone</label>
                    <input name="Phone" class="form-control">
                    @Html.LabelFor(model => model.Phone)
                </div>
                <div class="form-group">
                    <label for="Email">Email</label>
                    <input name="Email" class="form-control">
                    @Html.LabelFor(model => model.Email)
                </div>
                <hr />
            </div>

            <div class="col-12" id="divSelRole">
                <label id="titleUserForm">Access</label>
                <div class="form-group">
                    <div class="row">
                        <label for="Role" class="col-form-label">Role</label>
                        <select name="Role" id="selRoleUser" class="form-comtrol requiredCreateUser">
                            <option value="-1" selected>Select</option>
                            @*<option value="1" selected>pipa</option>*@
                        </select>
                        @Html.LabelFor(model => model.IdRole)
                    </div>
                </div>
                <div class="form-group">
                    <label for="Password">Password</label>
                    <input id="passwordCreateUser" name="Password" class="form-control requiredCreateUser">
                    @Html.LabelFor(model => model.Password)
                </div>
                <hr />
            </div>


        </form>

        <div class="col-12">
            <label id="titleUserForm">User pages</label>
            <div class="form-group">
                <div class="row">
                    <button class="btn btn-dark" id="btnUserPages">Open user pages</button>
                </div>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" id="btnUpdateUser" form="editUserForm" class="btn btn-success" onclick="updateUser()">Save</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    </div>
</div>


<div>
</div>



<script src="~/js/updateUserModal.js"></script>

@section Scripts {      
    
}
